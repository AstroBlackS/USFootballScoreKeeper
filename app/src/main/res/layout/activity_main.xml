<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="frank.usfootballscorekeeper.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:onClick="resetAllScores"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/teamAlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="50sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:paddingBottom="24dp"
                />

            <Button
                android:id="@+id/touchdownA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Touchdown!"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="touchdownA"
                />

            <Button
                android:id="@+id/extra_point_buttonA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Point"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="extraPointA"
                />

            <Button
                android:id="@+id/twoPointConversionButtonA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 point conversion"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="safetyA"
                />

            <Button
                android:id="@+id/field_goal_buttonA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field Goal"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="fieldGoalA"
                />

            <Button
                android:id="@+id/safetyButtonA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAFETY"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="safetyA"
                />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/black"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:id="@+id/teamBLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="50sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:paddingBottom="24dp"
                />

            <Button
                android:id="@+id/touchdownB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Touchdown!"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="touchdownB"
                />

            <Button
                android:id="@+id/extra_point_buttonB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Point"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="extraPointB"
                />

            <Button
                android:id="@+id/twoPointConversionButtonB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 point conversion"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="safetyB"
                />

            <Button
                android:id="@+id/field_goal_buttonB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field Goal"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="fieldGoalB"
                />

            <Button
                android:id="@+id/safetyButtonB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAFETY"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:onClick="safetyB"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>